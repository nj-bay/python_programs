#!/usr/bin/env python

def palcounter(num):
    counter = 0
    while !is_palindrom(num):
          numstr = str(num)
          revnumstr = numstr[::-1]
          revnumint = int(revnumstr)
          sum = revnumint + num
          num = sum
          counter +=1


     return counter

def is_palindrome(num):
    numstr + str(num)
    revnumstr = numstr[::-1]
    if numstr == revnumstr:
        return true
    else:
        return false
